<Window x:Class="Morse.CheatSheetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Morse Code Cheat Sheet" Height="600" Width="700"
        Background="#F0F0F0" ResizeMode="CanResize" MinHeight="400" MinWidth="500">
    <Grid>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="15">
            <TextBlock Text="Morse Code Reference" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="White">
                <StackPanel x:Name="CheatSheetPanel">
                    <!-- This will be populated by code-behind -->
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
